  <div class="field form-group">
    
    <%= form.text_field :email, class:"form-control" , placeholder: "Email"%>
  </div>

  <div class="field form-group">
  
    <%= form.text_field :departamento, class:"form-control", placeholder: "Departamento" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :cargo, class:"form-control", placeholder: "Cargo" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :locacao , class:"form-control",  placeholder: "Locação"%>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :chefe, class:"form-control", placeholder: "Chefe" %>
  </div>

  <div class="field form-group">
   
    <%= form.text_field :secretaria, class:"form-control", placeholder: "Secretária" %>
  </div>

